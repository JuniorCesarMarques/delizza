
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String    @id @default(cuid())
  name      String
  image     String?
  products  Product[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  imageUrl    String?  
  price       Int
  categoryId  String
  additionals ProductAdditional[] 
  category    Category  @relation(fields: [categoryId], references: [id])
}

model Additional {
  id        String    @id @default(cuid())
  name      String
  price     Float
  products  ProductAdditional[]
}


model ProductAdditional {
  id           String     @id @default(cuid())
  productId    String
  additionalId String
  product      Product    @relation(fields: [productId], references: [id])
  additional   Additional @relation(fields: [additionalId], references: [id])

  @@unique([productId, additionalId]) // impede duplicação
}