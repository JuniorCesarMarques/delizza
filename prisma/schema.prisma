generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(cuid())
  name       String
  password   String 
  role       Role @default(USER)

}

model customer {
  id         String @id @default(cuid())
  name       String
  addresses  Address[]
}

model Address {
  id            String @id @default(cuid())
  cep           String?
  street        String
  number        String
  neighborhood  String
  customerId    String
  user          customer @relation(fields: [customerId], references: [id])

}

enum Role {
  ADMIN
  USER
}



model Category {
  id       String    @id @default(cuid())
  name     String
  imageUrl String?
  products Product[]
}

model Product {
  id          String              @id @default(cuid())
  name        String
  description String?
  price       Decimal             @db.Decimal(10, 2)
  categoryId  String
  imageUrl    String?
  category    Category            @relation(fields: [categoryId], references: [id])
  additionals ProductAdditional[] 
  borders     ProductBorder[]
}

model Additional {
  id               String                @id @default(cuid())
  name             String
  price            Decimal               @db.Decimal(10, 2)
  products         ProductAdditional[]   
}

model Border {
  id         String          @id @default(cuid())
  name       String
  price      Decimal         @db.Decimal(10, 2)
  products   ProductBorder[]
}

model ProductBorder {
  id        String  @id @default(cuid())
  productId String
  borderId  String
  product   Product @relation(fields: [productId], references: [id])
  border    Border  @relation(fields: [borderId], references: [id])

  @@unique([productId, borderId])
}

model ProductAdditional {
  id           String     @id @default(cuid())
  productId    String
  additionalId String
  additional   Additional @relation(fields: [additionalId], references: [id])
  product      Product    @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, additionalId])
}

model Order {
  id              String      @id @default(cuid())
  status          OrderStatus @default(PENDING)
  customer        String?
  subtotal        Decimal     @db.Decimal(10, 2)
  deliveryFee     Decimal     @db.Decimal(10, 2)
  total           Decimal     @db.Decimal(10, 2)
  createdAt       DateTime    @default(now())
  items           OrderItem[]
}

enum OrderStatus {
  PENDING
  PAID
  CANCELED
}

model OrderItem {
  id          String   @id @default(cuid())

  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])

  productName String
  type        OrderItemType

  quantity    Int
  unitPrice   Decimal  @db.Decimal(10, 2)
  totalPrice  Decimal  @db.Decimal(10, 2)
}

enum OrderItemType {
  PIZZA
  BORDER
  ADDITIONAL
  DRINK
}
