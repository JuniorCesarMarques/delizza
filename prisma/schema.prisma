generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       String    @id @default(cuid())
  name     String
  imageUrl String?
  products Product[]
}

model Product {
  id          String              @id @default(cuid())
  name        String
  description String?
  price       Decimal             @db.Decimal(10, 2)
  categoryId  String
  imageUrl    String?
  category    Category            @relation(fields: [categoryId], references: [id])
  additionals ProductAdditional[]
  borders     ProductBorder[]
}

model Additional {
  id               String                @id @default(cuid())
  name             String
  price            Decimal               @db.Decimal(10, 2)
  products         ProductAdditional[]
  orderAdditionals OrderItemAdditional[]
}

model Border {
  id         String          @id @default(cuid())
  name       String
  price      Decimal         @db.Decimal(10, 2)
  products   ProductBorder[]
  orderItems OrderItem[]
}

model ProductBorder {
  id        String  @id @default(cuid())
  productId String
  borderId  String
  product   Product @relation(fields: [productId], references: [id])
  border    Border  @relation(fields: [borderId], references: [id])

  @@unique([productId, borderId])
}

model ProductAdditional {
  id           String     @id @default(cuid())
  productId    String
  additionalId String
  additional   Additional @relation(fields: [additionalId], references: [id])
  product      Product    @relation(fields: [productId], references: [id])

  @@unique([productId, additionalId])
}

model OrderItem {
  id          String                @id @default(cuid())
  orderId     String
  productId   String
  borderId    String?
  quantity    Int
  basePrice   Decimal               @db.Decimal(10, 2)
  totalPrice  Decimal               @db.Decimal(10, 2)
  additionals OrderItemAdditional[]
  border      Border?               @relation(fields: [borderId], references: [id])
}

model OrderItemAdditional {
  id           String     @id @default(cuid())
  orderItemId  String
  additionalId String
  price        Decimal    @db.Decimal(10, 2)
  additional   Additional @relation(fields: [additionalId], references: [id])
  orderItem    OrderItem  @relation(fields: [orderItemId], references: [id])
}
